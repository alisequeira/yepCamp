<%- include("../partials/header") %>
<div class="Container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=foundCampground.image%>">
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a><%= foundCampground.name%></a></h4>
                    <p><%= foundCampground.description%></p>
                    <p>
                        <em>Submitted by : <%= foundCampground.author.username%></em>
                    </p>
                    <% if(currentUser && foundCampground.author.id.equals(currentUser._id)){%>
                    <a class="btn btn-warning" href="/campgrounds/<%=foundCampground._id%>/edit">EDIT</a>
                    <form id="delete-form" action="/campgrounds/<%=foundCampground._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">DELETE</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%= foundCampground._id %>/comments/new">Add New
                        Comment</a>
                </div>
                <hr>
                <% foundCampground.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <%= comment.author.username %>
                        <span class="pull-right">10 days ago</span>
                        <p>
                            <%= comment.text %>
                        </p>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>







<%_ include("../partials/footer") %>